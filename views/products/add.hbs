{{> topbanner title="Agregar Producto" description="Agrega un producto a la Lynx Store"}}

<div class="container">
    <form class="row" action="/api/products/" enctype="multipart/form-data" method="POST" style="margin: 100px 30px;">
        <div class="col-12 mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" required/>
        </div>
        <div class="col-md-6 mb-3">
            <label for="codigo" class="form-label">Código (SKU)</label>
            <input type="text" class="form-control" id="codigo" name="codigo" required/>
        </div>
        <div class="col-md-6 mb-3">
            <label for="stock" class="form-label">Cantidad de unidades</label>
            <input type="number" class="form-control" id="stock" name="stock" required/>
        </div>
        <div class="col-md-6 mb-3">
            <label for="foto" class="form-label">Imagen del Producto</label>
            <input type="file" class="form-control" id="foto" name="foto" required/>
        </div>
        <div class="col-md-6 mb-3">
            <label for="precio" class="form-label">Precio (ARS$)</label>
            <input type="number" class="form-control" id="precio" name="precio" required/>
        </div>
        <div class="col-12 mb-3">
            <label for="descripcion" class="form-label">Descripción</label>
            <textarea type="textbox" class="form-control" id="descripcion" name="descripcion" rows="5" required></textarea>
        </div>
        <div class="col-12 mb-3">
            <button type="submit" class="btn btn-primary col-12" style="padding: 20px; margin-top: 50px;">Agregar Producto</button>
        </div>
    </form>
</div>