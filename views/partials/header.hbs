<header class="header bg-white navbar-area">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <nav class="navbar navbar-expand-lg">
                    <a class="navbar-brand" href="index.html">
                        <img
                                src="https://lynx.net.ar/assets/img/logo.svg"
                                class="img-fluid"
                                alt="Lynx"
                                title="Lynx"
                                style="height: 54px;"/>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </button>
                    <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                        <ul id="nav" class="navbar-nav ms-auto me-auto">
                            <li class="nav-item">
                                <a title="Inicio" href="/">
                                    <i class="fa fa-home" aria-hidden="true"></i>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a title="Tienda" href="/products">
                                    <i class="fa fa-shopping-bag" aria-hidden="true"></i>
                                </a>
                            </li>
                        </ul>
                        <ul id="user-section" class="navbar-nav">
                            {{#if cart}}
                                <button type="button" class="btn position-relative" style="color: var(--text-color)">
                                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                    {{#if cart.haveProducts }}
                                        <span class="translate-middle badge rounded-pill" style="background: var(--site-color); top: -5px; left: 15px;">
                                            {{cart.products.length}}
                                            <span class="visually-hidden">Porductos</span>
                                        </span>
                                    {{/if}}
                                </button>
                            {{/if}}
                            {{#if session.user}}
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        {{session.user.name}}
                                        <div style="
                                                height: 54px;
                                                width: 54px;
                                                margin: 0px 20px;
                                                border-radius: 100%;
                                                background-image: url('/img/profile/{{session.user.avatar}}');
                                                background-repeat: no-repeat;
                                                background-position: center center;
                                                background-size: cover">
                                        </div>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item disabled" href="#">Perfil</a></li>
                                        {{#if session.user.isSeller}}
                                            <li><a class="dropdown-item" href="/products/add">Vender Producto &nbsp; &nbsp; &nbsp; <i class="fa fa-plus-circle ms-auto" aria-hidden="true"></i></a></li>
                                        {{/if}}
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" href="/auth/logout">
                                                Salir <i class="fa fa-sign-out ms-auto" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            {{else}}
                                <li class="nav-item">
                                    <a class="page-scroll" title="Iniciar Sesion" href="/auth/login">
                                        <i class="fa fa-sign-in" aria-hidden="true"></i>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="page-scroll" title="Registrarse" href="/auth/register">
                                        <i class="fa fa-user-plus" aria-hidden="true"></i>
                                    </a>
                                </li>
                            {{/if}}
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>
