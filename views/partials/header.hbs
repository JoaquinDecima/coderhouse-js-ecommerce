<header class="header bg-white navbar-area">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <nav class="navbar navbar-expand-lg">
                    <a class="navbar-brand" href="index.html">
                        <img
                                src="https://lynx.net.ar/assets/img/logo.svg"
                                class="img-fluid"
                                alt="Lynx"
                                title="Lynx"
                                style="height: 54px;"/>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </button>
                    <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                        <ul id="nav" class="navbar-nav ms-auto me-auto">
                            <li class="nav-item">
                                <a class="page-scroll" title="Inicio" href="/">
                                    <i class="fa fa-home" aria-hidden="true"></i>
                                </a>
                            </li>
                        </ul>
                        <ul id="user-section" class="navbar-nav">
                            {{#if session.user}}
                                <li class="nav-item">
                                    {{session.user.name}}
                                    <img
                                            src="/img/profile/{{session.user.avatar}}"
                                            class="img-fluid"
                                            style="max-height: 54px; border-radius: 100%"/>
                                </li>
                                <li class="nav-item">
                                    <a class="page-scroll" title="Inicio" href="/auth/logout">
                                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                                    </a>
                                </li>
                            {{else}}
                                <li class="nav-item">
                                    <a class="page-scroll" title="Inicio" href="/auth/login">
                                        <i class="fa fa-sign-in" aria-hidden="true"></i>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="page-scroll" title="Inicio" href="/auth/register">
                                        <i class="fa fa-user-plus" aria-hidden="true"></i>
                                    </a>
                                </li>
                            {{/if}}
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>
